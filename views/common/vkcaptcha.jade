extends ../layout
block content
  form.form-horizontal(
  method='post'
  action='/post/captcha'
  )
    input(
      type='hidden'
      name='sid'
      value=sid
    )
    div.form-group
      div.col-sm-offset-1.col-sm-10
        img(src=img)
    div.form-group
      label.col-sm-1.control-label(
      for="inputTitle"
      ) Капча
      div.col-sm-10
        input.form-control(
        type="text"
        name="captcha_key"
        id="inputTitle"
        )
    div.form-group
      label.col-sm-1.control-label(
      for="inputTitle"
      ) VK ID
      div.col-sm-4
        input.form-control(
        type="text"
        name="user"
        value=user
        )
      label.col-sm-1.control-label(
      for="inputTitle"
      ) Group ID
      div.col-sm-4
        input.form-control(
        type="text"
        name="group"
        value=group
        )
    div.form-group
      div.col-sm-offset-1.col-sm-10
        button.btn.btn-default(
        type="submit"
        ) Отправить