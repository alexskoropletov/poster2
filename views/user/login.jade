extends ../layout
block content
  form.form-horizontal(
  method='post'
  action='/users/login'
  )
    if message
      div.alert.alert-danger(role="alert")= message
    div.form-group
      div.col-sm-2
        input.form-control(
        type="text"
        name="login"
        id="inputLogin"
        placeholder="Логин"
        )
    div.form-group
      div.col-sm-2
        input.form-control(
        type="password"
        name="password"
        id="inputPassword"
        placeholder="Пароль"
        )
    div.form-group
      div.col-sm-2
        button.btn.btn-default(
        type="submit"
        ) Авторизоваться